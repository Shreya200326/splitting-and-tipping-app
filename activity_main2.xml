<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">
    <TextView
        android:id="@+id/splitAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="65dp"
        android:text="Total Bill"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/peoplecount"
        app:layout_constraintEnd_toStartOf="@+id/billSum1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/peoplecount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginBottom="569dp"
        android:text="No. of people"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/splitAmount"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Other XML namespaces and attributes remain unchanged -->

    <EditText
        android:id="@+id/billSum1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="647dp"
        android:ems="8"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/splitAmount"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/count1"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="49dp"
        android:layout_marginBottom="561dp"
        android:ems="5"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/peoplecount"
        app:layout_constraintTop_toBottomOf="@+id/billSum1" />


    <Button
        android:id="@+id/switch_activity2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="139dp"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="184dp"
        android:layout_marginBottom="200dp"
        android:text="Tip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/count1"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvsplit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="261dp"
        android:layout_marginBottom="500dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/splitheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Split"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="212dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
